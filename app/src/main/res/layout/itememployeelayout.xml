<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvEmployeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvMarkInCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark In: 0"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvMarkOutCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Out: 0"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvShortLeaveCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Leave: 0" />

            <!-- Eye icon for viewing remarks; ensure you have a drawable named ic_eye -->
            <ImageView
                android:id="@+id/ivViewRemark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/eye"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="View Remark" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
