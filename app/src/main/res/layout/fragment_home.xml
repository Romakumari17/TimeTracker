<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:fontFamily="serif"
      android:textColor="@color/darkpurple"
       android:textSize="30dp"
       android:text="@string/Hello"
       />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:fontFamily="serif"
            android:textColor="@color/darkpurple"
            android:id="@+id/tvpersonname"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="serif"
        android:textSize="15dp"
        android:id="@+id/tvdate"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/markInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark IN" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/induration"

            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/markOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark OUT" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outduration"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"

            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/shortLeaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Leave" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slduration"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"

            />

    </RelativeLayout>





</LinearLayout>